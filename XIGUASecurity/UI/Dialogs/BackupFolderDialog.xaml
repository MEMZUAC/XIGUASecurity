<ContentDialog
    x:Class="XIGUASecurity.UI.Dialogs.BackupFolderDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:XIGUASecurity.UI.Dialogs"
    xmlns:l="using:WinUI3Localizer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    l:Uids.Uid="BackupFolderDialog"
    Title="备份目录设置"
    PrimaryButtonText="添加目录"
    CloseButtonText="关闭"
    DefaultButton="Primary"
    CornerRadius="8"
    PrimaryButtonClick="OnPrimaryButtonClick">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 统计信息 -->
        <TextBlock x:Name="CountTextBlock" 
                   Text="{x:Bind CountText}" 
                   Margin="0,0,0,16" 
                   FontWeight="SemiBold"/>

        <!-- 备份目录列表 -->
        <ListView x:Name="BackupFolderListView" 
                  Grid.Row="1" 
                  SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="x:String">
                    <Grid Padding="12" BorderBrush="LightGray" BorderThickness="0,0,0,1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="{x:Bind}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                        
                        <Button Grid.Column="1" 
                                Name="OpenButton"
                                Content="打开"
                                Margin="8,0" 
                                Click="OpenButton_Click" 
                                Tag="{x:Bind}"/>
                        
                        <Button Grid.Column="2" 
                                Name="RemoveButton"
                                Content="移除"
                                Margin="8,0" 
                                Click="RemoveButton_Click" 
                                Tag="{x:Bind}"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- 文件夹选择器 -->
        <TextBox x:Name="FolderPathTextBox" 
                 Grid.Row="2" 
                 Margin="0,16,0,0"
                 PlaceholderText="输入文件夹路径，例如：C:\\Users\\用户名\\Documents"/>
        
        <!-- TeachingTip 用于显示操作结果 -->
        <TeachingTip x:Name="ResultTeachingTip"
                     IsLightDismissEnabled="True"
                     PreferredPlacement="Top"/>
    </Grid>
</ContentDialog>