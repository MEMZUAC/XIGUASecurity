<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="XIGUASecurity.SecurityPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:XIGUASecurity"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:l="using:WinUI3Localizer"
    mc:Ignorable="d">

    <Page.Resources>
        <Storyboard x:Name="RadarScanStoryboard">
            <DoubleAnimation Storyboard.TargetName="RadarScanLine"
                         Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                         From="0" To="360" Duration="0:0:3" RepeatBehavior="Forever"/>
        </Storyboard>

        <Storyboard x:Name="RadarLineAppearStoryboard">
            <DoubleAnimation Storyboard.TargetName="RadarScanLine"
                     Storyboard.TargetProperty="Opacity"
                     From="0" To="0.8" Duration="0:0:0.3"/>
        </Storyboard>

        <Storyboard x:Name="RadarLineDisappearStoryboard">
            <DoubleAnimation Storyboard.TargetName="RadarScanLine"
                         Storyboard.TargetProperty="Opacity"
                         From="0.8" To="0" Duration="0:0:0.2"/>
        </Storyboard>

        <DataTemplate x:Key="MoreScanListTemplate">
            <Grid Padding="0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <FontIcon Grid.Column="0" Glyph="{Binding IconGlyph}" Margin="0,0,8,0" FontSize="16"/>
                <TextBlock Grid.Column="1" Text="{Binding Path}" TextTrimming="CharacterEllipsis" VerticalAlignment="Center"/>
            </Grid>
        </DataTemplate>


    </Page.Resources>

    <ScrollViewer>
        <Grid Margin="64,16,64,0" VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- 顶部状态卡片 -->
            <Border x:Name="ScanStatusCard" BorderThickness="1" BorderBrush="{ThemeResource CardStrokeColorDefaultSolid}" Grid.Row="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="16" Margin="0,0,0,16" Visibility="Collapsed">
                <StackPanel>
                <TextBlock x:Name="ScanStatusHeader" l:Uids.Uid="SecurityPage_ScanStatusHeader" FontSize="16" FontWeight="Bold" Margin="0,0,0,16"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <FontIcon x:Name="ScanAreaIcon" Grid.Column="0" Glyph="&#xE721;" FontSize="24" Margin="0,0,12,0"/>
                        <StackPanel Grid.Column="1">
                            <TextBlock x:Name="CurrentScanAreaText" l:Uids.Uid="SecurityPage_CurrentScanAreaText" FontSize="14" FontWeight="SemiBold"/>
                            <TextBlock x:Name="ScanProgressDetailText" l:Uids.Uid="SecurityPage_ScanProgressDetailText" FontSize="12" Opacity="0.7"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- 主要内容区域：左右分栏 -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- 左侧：扫描雷达和进度 -->
                <Border Grid.Column="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                        BorderBrush="{ThemeResource CardStrokeColorDefaultSolid}" BorderThickness="1"
                        CornerRadius="8" Padding="16" Margin="0,0,8,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- 标题行：路径文本和扫描按钮 -->
                        <Grid Grid.Row="0" Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- 路径文本 -->
                            <TextBlock Name="PathText" l:Uids.Uid="SecurityPage_PathText" Grid.Column="0" FontSize="16" VerticalAlignment="Center"/>
                            
                            <!-- 扫描按钮 -->
                            <DropDownButton Grid.Column="1" x:Name="ScanButton">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <FontIcon Glyph="&#xE8B7;" FontSize="16"/>
                                    <TextBlock x:Name="ScanButtonText" l:Uids.Uid="SecurityPage_ScanButtonText"/>
                                </StackPanel>
                                <DropDownButton.Flyout>
                                    <MenuFlyout Placement="Bottom">
                                        <MenuFlyoutItem l:Uids.Uid="SecurityPage_ScanMenu_Quick" Tag="Quick" Click="OnScanMenuClick">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE945;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>
                                        <MenuFlyoutItem l:Uids.Uid="SecurityPage_ScanMenu_Full" Tag="Full" Click="OnScanMenuClick">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xEDA2;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>
                                        <MenuFlyoutSeparator/>
                                        <MenuFlyoutItem l:Uids.Uid="SecurityPage_ScanMenu_File" Tag="File" Click="OnScanMenuClick">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE8A5;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>
                                        <MenuFlyoutItem l:Uids.Uid="SecurityPage_ScanMenu_Folder" Tag="Folder" Click="OnScanMenuClick">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE8B7;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>
                                        <MenuFlyoutSeparator/>
                                        <MenuFlyoutItem l:Uids.Uid="SecurityPage_ScanMenu_More" Tag="More" Click="OnScanMenuClick">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE944;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>
                                    </MenuFlyout>
                                </DropDownButton.Flyout>
                            </DropDownButton>
                        </Grid>
                        
                        <!-- 雷达扫描区域 -->
                        <Grid Grid.Row="2" Margin="0,0,0,16" Height="300">
                            <!-- 雷达背景 -->
                            <Ellipse Width="280" Height="280" Stroke="{ThemeResource AccentTextFillColorTertiaryBrush}" 
                                     StrokeThickness="2" Opacity="0.3" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Ellipse Width="220" Height="220" Stroke="{ThemeResource AccentTextFillColorTertiaryBrush}" 
                                     StrokeThickness="1" Opacity="0.2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Ellipse Width="160" Height="160" Stroke="{ThemeResource AccentTextFillColorTertiaryBrush}" 
                                     StrokeThickness="1" Opacity="0.2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Ellipse Width="100" Height="100" Stroke="{ThemeResource AccentTextFillColorTertiaryBrush}" 
                                     StrokeThickness="1" Opacity="0.2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            
                            <!-- 雷达扫描线 -->
                            <Line x:Name="RadarScanLine" X1="30" Y1="300" X2="0" Y2="0" 
                                  Stroke="{ThemeResource AccentTextFillColorTertiaryBrush}" StrokeThickness="2" 
                                  HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0">
                                <Line.RenderTransform>
                                    <RotateTransform CenterX="15" CenterY="150"/>
                                </Line.RenderTransform>
                            </Line>
                            
                            <!-- 加载指示器 -->
                            <ProgressRing x:Name="ScanProgressRing" Width="300" Height="300" 
                                         IsActive="False" 
                                         Foreground="{ThemeResource SystemAccentColor}"
                                         HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            
                            <!-- 进度百分比文本 -->
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock x:Name="ProgressPercentText" Text="0%" FontSize="36" 
                                          FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="ScanStatusDetailText" Text="准备就绪" FontSize="14" 
                                          HorizontalAlignment="Center" Margin="0,8,0,0" 
                                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>
                        </Grid>
                        
                        <!-- 进度条 -->
                        <ProgressBar x:Name="ScanProgress" Grid.Row="3" Height="12" CornerRadius="6" 
                                     Background="Transparent" BorderThickness="0" Minimum="0" Maximum="100"
                                     Foreground="{ThemeResource SystemAccentColor}" Margin="0,0,0,16"/>
                        
                        <!-- 扫描统计信息 -->
                        <Grid Grid.Row="4" Margin="0,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <FontIcon Glyph="&#xE916;" FontSize="24" Margin="0,0,0,4" Foreground="{ThemeResource AccentTextFillColorTertiaryBrush}"/>
                                <TextBlock x:Name="ScanSpeedText" FontSize="12" TextAlignment="Center" Foreground="{ThemeResource AccentTextFillColorTertiaryBrush}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                <FontIcon Glyph="&#xE8B7;" FontSize="24" Margin="0,0,0,4" Foreground="{ThemeResource AccentTextFillColorTertiaryBrush}"/>
                                <TextBlock x:Name="FilesScannedText" FontSize="12" TextAlignment="Center" Foreground="{ThemeResource AccentTextFillColorTertiaryBrush}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                <FontIcon Glyph="&#xE7C9;" FontSize="24" Margin="0,0,0,4" Foreground="{ThemeResource AccentTextFillColorTertiaryBrush}"/>
                                <TextBlock x:Name="FilesSafeText" FontSize="12" TextAlignment="Center" Foreground="{ThemeResource AccentTextFillColorTertiaryBrush}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                                <FontIcon Glyph="&#xE783;" FontSize="24" Margin="0,0,0,4" Foreground="{ThemeResource AccentTextFillColorTertiaryBrush}"/>
                                <TextBlock x:Name="ThreatsFoundText" FontSize="12" TextAlignment="Center" Foreground="{ThemeResource AccentTextFillColorTertiaryBrush}"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
                
                <!-- 右侧：威胁列表和操作按钮 -->
                <Border Grid.Column="1" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                        BorderBrush="{ThemeResource CardStrokeColorDefaultSolid}" BorderThickness="1"
                        CornerRadius="8" Padding="16" Margin="8,0,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- 操作按钮区域 -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center" Margin="0,0,0,16">
                            <Button x:Name="BackToVirusListButton" Click="OnBackToVirusListClick" Visibility="Collapsed">
                                <StackPanel Orientation="Horizontal" Tag="Visible" Spacing="8">
                                    <FontIcon x:Name="BackToVirusListButtonIcon" Glyph="&#xE890;"/>
                                    <TextBlock x:Name="BackToVirusListButtonText" l:Uids.Uid="SecurityPage_BackToVirusListButtonText"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="PauseScanButton" Click="OnPauseScanClick" Visibility="Collapsed">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xF5E7;"/>
                                    <TextBlock l:Uids.Uid="SecurityPage_PauseScanButtonText"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="ResumeScanButton" Click="OnResumeScanClick" Visibility="Collapsed">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE768;"/>
                                    <TextBlock l:Uids.Uid="SecurityPage_ResumeScanButtonText"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                        
                        <!-- 威胁列表 -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" 
                                      MaxHeight="400">
                            <ListView Name="VirusList" Visibility="Collapsed" DoubleTapped="VirusList_DoubleTapped">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="12,6">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{Binding FilePath}" TextTrimming="CharacterEllipsis" VerticalAlignment="Center"/>
                                        <Border Grid.Column="1" Background="#FFE6E6" CornerRadius="4" Padding="8,4" 
                                                VerticalAlignment="Center" HorizontalAlignment="Right">
                                            <TextBlock Text="{Binding VirusName}" Foreground="#D32F2F" VerticalAlignment="Center"/>
                                        </Border>
                                        
                                        <Grid.ContextFlyout>
                                            <MenuFlyout>
                                                <MenuFlyoutItem l:Uids.Uid="SecurityPage_MenuItem_Details" Click="OnDetailClick" Tag="{Binding}">
                                                    <MenuFlyoutItem.Icon>
                                                        <FontIcon Glyph="&#xE946;" />
                                                    </MenuFlyoutItem.Icon>
                                                </MenuFlyoutItem>
                                                <MenuFlyoutSeparator/>
                                                <MenuFlyoutItem l:Uids.Uid="SecurityPage_MenuItem_Trust" Click="OnTrustClick" Tag="{Binding}">
                                                    <MenuFlyoutItem.Icon>
                                                        <FontIcon Glyph="&#xE73E;" />
                                                    </MenuFlyoutItem.Icon>
                                                </MenuFlyoutItem>
                                                <MenuFlyoutItem l:Uids.Uid="SecurityPage_MenuItem_Handle" Click="OnHandleClick" Tag="{Binding}">
                                                    <MenuFlyoutItem.Icon>
                                                        <FontIcon Glyph="&#xE74D;" />
                                                    </MenuFlyoutItem.Icon>
                                                </MenuFlyoutItem>
                                            </MenuFlyout>
                                        </Grid.ContextFlyout>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        </ScrollViewer>
                        
                        <!-- 状态文本 -->
                        <TextBlock Name="StatusText" Grid.Row="2" Margin="0,16,0,0" FontSize="14" TextWrapping="Wrap"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>