<ContentDialog
    x:Class="XIGUASecurity.UI.Dialogs.QuarantineDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:XIGUASecurity.UI.Dialogs"
    xmlns:prot="using:XIGUASecurity.Protection"
    xmlns:l="using:WinUI3Localizer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    l:Uids.Uid="QuarantineDialog"
    Title="{x:Bind DialogTitle}"
    CloseButtonText="{x:Bind DialogCloseButtonText}"
    DefaultButton="Close"
    CornerRadius="8">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 统计信息 -->
        <TextBlock x:Name="CountTextBlock" 
                   Text="{x:Bind CountText}" 
                   Margin="0,0,0,16" 
                   FontWeight="SemiBold"/>

        <!-- 隔离区文件列表 -->
        <ListView x:Name="QuarantineListView" 
                  Grid.Row="1" 
                  SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="prot:QuarantineItem">
                    <Grid Padding="12" BorderBrush="LightGray" BorderThickness="0,0,0,1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="{x:Bind FileName}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                            <TextBlock Text="{x:Bind OriginalPath}" FontSize="12" Foreground="Gray" TextTrimming="CharacterEllipsis"/>
                            <TextBlock Text="{x:Bind FormattedQuarantineDate}" FontSize="12" Foreground="Gray"/>
                            <TextBlock Text="{x:Bind VirusName}" FontSize="12" Foreground="Red"/>
                        </StackPanel>
                        
                        <Button Grid.Column="1" 
                                Name="RestoreButton"
                                l:Uids.Uid="QuarantineDialog_Restore"
                                Margin="8,0" 
                                Click="RestoreButton_Click" 
                                Tag="{x:Bind}"/>
                        
                        <Button Grid.Column="2" 
                                Name="DeleteButton"
                                l:Uids.Uid="QuarantineDialog_Delete"
                                Margin="8,0" 
                                Click="DeleteButton_Click" 
                                Tag="{x:Bind}"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- 清空所有按钮 -->
        <Button x:Name="ClearAllButton" 
                Grid.Row="2" 
                l:Uids.Uid="QuarantineDialog_ClearAll"
                HorizontalAlignment="Right" 
                Margin="0,16,0,0" 
                Click="ClearAllButton_Click"/>
        
        <!-- TeachingTip 用于显示操作结果 -->
        <TeachingTip x:Name="ResultTeachingTip"
                     l:Uids.Uid="QuarantineDialog_OperationResult"
                     IsLightDismissEnabled="True"
                     PreferredPlacement="Top"/>
    </Grid>
</ContentDialog>